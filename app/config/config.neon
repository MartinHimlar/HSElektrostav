#
# WARNING: it is CRITICAL that this file & directory are NOT accessible directly via a web browser!
# https://nette.org/security-warning
#
parameters:


php:
	date.timezone: Europe/Prague


application:
	errorPresenter: Error
	mapping:
		*: App\*Module\Presenters\*Presenter

latte:
		macros:
			- Nextras\Latte\Macros\RedefineMacro


session:
	expiration: 14 days


services:
	# forms
	- App\Forms\SignFormFactory
	- App\Forms\AddUserFormFactory
	- App\Forms\AddCustomerFormFactory

	# models
	- App\Model\ImagesManager
	- App\Users\UserManager
	- App\Customers\CustomerRepository

	# grids & datasources
	- App\AdminModule\Controls\UsersDataSource
	- App\AdminModule\Controls\UsersGridFactory
	- App\AdminModule\Controls\CustomersDataSource
	- App\AdminModule\Controls\CustomersGridFactory

	router: App\RouterFactory::createRouter
